<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.i18n.encoding" value="UTF-8" />
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />

    <package name="default" namespace="/" extends="struts-default">
    	<!-- 显示登录界面 -->
        <action name="login" class="www.page.action.LoginAction" method="loginPage" >
        	<result name="login">/WEB-INF/login.jsp</result>
        </action>  
        <!-- 登录操作 -->
        <action name="loginJudge" class="www.page.action.LoginAction" method="loginDo">
        	<result name="faileLogin">/WEB-INF/login.jsp</result>
        	<result name="successLogin">/WEB-INF/index.jsp</result>
        </action>  
        <!-- 科研情况 -->
        <action name="technologyResearch" class="www.page.action.TechnologyAction" method="">
        	<result name=""></result>
        </action>
        <!-- 学校部门管理 -->
        <action name="schooldepartment" class="www.page.action.SchoolDepartmentAction" method="showSchoolDepartInfo">
        	<result name="success">/WEB-INF/schooldepartShowPage.jsp</result>
        </action>
        <!-- 用户信息管理 -->
        <action name="userinfo" class="www.page.action.UserInfoAction" method="showUserInfos">
        	<result name="success">/WEB-INF/userinfo.jsp</result>
        </action>
    </package>
</struts>